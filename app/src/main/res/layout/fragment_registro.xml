<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registro.registroFragment" >

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/fondo"
        android:layout_width="421dp"
        android:layout_height="280dp"
        android:background="@drawable/fondo_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="394dp"
        android:layout_height="229dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <View
        android:id="@+id/fondologin"
        android:layout_width="276dp"
        android:layout_height="351dp"
        android:background="@drawable/login_background"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="0.782"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textlogin"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:fontFamily="cursive"
        android:text="@string/registro"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/fondologin"
        app:layout_constraintEnd_toEndOf="@+id/fondologin"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/fondologin"
        app:layout_constraintTop_toTopOf="@+id/fondologin"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="225dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:background="@drawable/input_back"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/Contraseña"
        app:layout_constraintEnd_toEndOf="@+id/fondologin"
        app:layout_constraintStart_toStartOf="@+id/fondologin"
        app:layout_constraintTop_toTopOf="@+id/fondologin"
        app:layout_constraintVertical_bias="1.0"
        android:hint="Email"
        android:gravity="center"
        android:fontFamily="sans-serif"        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Contraseña"
        android:layout_width="225dp"
        android:layout_height="41dp"
        android:autofillHints=""
        android:background="@drawable/input_back"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:fontFamily="sans-serif"        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fondologin"
        app:layout_constraintEnd_toEndOf="@+id/fondologin"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/fondologin"
        app:layout_constraintTop_toTopOf="@+id/fondologin"
        app:layout_constraintVertical_bias="0.435"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirmar_contraseña"
        android:layout_width="225dp"
        android:layout_height="41dp"
        android:autofillHints=""
        android:background="@drawable/input_back"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="confirmar Contraseña"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fondologin"
        app:layout_constraintEnd_toEndOf="@+id/fondologin"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/fondologin"
        app:layout_constraintTop_toTopOf="@+id/fondologin"
        app:layout_constraintVertical_bias="0.645"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/back"
        android:fontFamily="sans-serif"
        android:text="Registrar"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/fondologin"
        app:layout_constraintEnd_toEndOf="@+id/fondologin"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/fondologin"
        app:layout_constraintTop_toBottomOf="@+id/confirmar_contraseña"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
